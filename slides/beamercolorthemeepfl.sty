% Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

% colors from from EPFL logo
\RequirePackage{epflcolors}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=black}

\setbeamercolor{alerted text}{fg=black}

\setbeamerfont{alerted text}{series=\bfseries}

% Headline
\setbeamercolor{headline}{fg=black,bg=epfllight}

% Block
\setbeamercolor{block title}{fg=epflred,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Example Block
\setbeamercolor{block title example}{fg=epflred,bg=white}
\setbeamercolor{block separator example}{bg=black}
\setbeamercolor{block body example}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=epflred,bg=epfllight}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=epfllight}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
%\setbeamercolor{item}{fg=epflred}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
